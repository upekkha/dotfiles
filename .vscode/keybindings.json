[
    { "key": "cmd+]",    "command": "workbench.action.nextEditor" },
    { "key": "cmd+[",    "command": "workbench.action.previousEditor" },
    { "key": "ctrl+p",   "command": "workbench.action.quickOpen" },
    { "key": "cmd+=",    "command": "editor.action.fontZoomIn" },
    { "key": "cmd+-",    "command": "editor.action.fontZoomOut" },
    { "key": "cmd+0",    "command": "editor.action.fontZoomReset" },
    {
        "key": "up",
        "command": "cursorUp",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal' && !inDebugRepl && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible"
    },
    {
        "key": "down",
        "command": "cursorDown",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal' && !inDebugRepl && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible"
    },
    {
        "key": "up",
        "command": "cursorUp",
        "when": "editorTextFocus && vim.active && vim.mode == 'Insert' && !inDebugRepl && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible"
    },
    {
        "key": "down",
        "command": "cursorDown",
        "when": "editorTextFocus && vim.active && vim.mode == 'Insert' && !inDebugRepl && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible"
    },
    {
        "key": "space",
        "command": "editor.toggleFold",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
    },
]
